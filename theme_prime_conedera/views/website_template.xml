<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="conedera_navbar_nav" name="Custom Navbar" inherit_id="website.navbar_nav">
        <xpath expr="//ul" position="attributes">
            <attribute name="class">justify-content-between</attribute>
        </xpath>
    </template>

    <template id="option_header_brand_logo" name="Custom Header Brand Logo" inherit_id="website.option_header_brand_logo">
        <xpath expr="//a" position="attributes">
            <attribute name="t-attf-class" remove="navbar-brand logo #{_link_class}"></attribute>
        </xpath>
    </template>

</odoo>
