    <!-- Herencia del Header Style 4 del tema prime -->
    <template id="template_header_style_4_conedera"
              inherit_id="theme_prime.template_header_style_4"
              name="Header Style 4 - Conedera">
        
        <!-- Ejemplo: cambiar texto "My Cart" a "Mi Carrito" -->
        <xpath expr="//div[@class='mb-1' and contains(text(), 'My Cart')]" position="replace">
            <div class="mb-1">Mi Carrito</div>
        </xpath>

        <!-- Ejemplo: agregar clase adicional al header -->
        <xpath expr="//div[contains(@class, 'tp-header-box')]" position="attributes">
            <attribute name="class" add="header-conedera-style" separator=" "/>
        </xpath>

    </template>




