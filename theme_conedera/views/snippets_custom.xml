<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="snippet_options_custom" inherit_id="theme_prime.snippet_options">
        <xpath expr="//we-select[@data-variable='header-template']/we-button[last()]" position="after">
            <!-- Nuevo Header -->
            <we-button title="Header Custom Style - 1"
                       data-name="tp_header_custom_1_opt"
                       data-customize-website-views="template_header_custom_1"
                       data-customize-website-variable="'custom_style_1'"
                       data-img="/theme_conedera/static/src/img/options/header_custom_1.svg"/>
        </xpath>
    </template>

    <template id="template_header_custom_1" name="Header Style Custom - 1" inherit_id="website.layout">
        <xpath expr="//header" position="attributes">
            <attribute name="t-attf-class" add="tc-custom-header" separator=" "/>
        </xpath>
        <!-- <xpath expr="//header//nav" position="replace">
            <header>
                <nav>
                
                </nav>
            </header>
        </xpath> -->
    </template>
</odoo>
